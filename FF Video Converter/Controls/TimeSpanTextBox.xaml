<UserControl x:Class="FFVideoConverter.Controls.TimeSpanTextBox"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:controls="clr-namespace:FFVideoConverter.Controls"
             Height="25" Width="77">

    <TextBox x:Name="textBox" Text="00:00:00.00" Foreground="{Binding Foreground, RelativeSource={RelativeSource Mode=FindAncestor, AncestorType={x:Type controls:TimeSpanTextBox}}}"/>
    
</UserControl>
